#!/usr/bin/env node
'use strict';

var program = require('commander');
var join = require('path').join;
var exists = require('fs').existsSync;
var spawn = require('cross-spawn');

program
    .version(require('../package').version)
    .usage('<command> [options]')
    .on('--help', printHelp)
    .parse(process.argv);

var aliases = {
    g: 'generate',
    i: 'init',
    n: 'new'
};

var args = process.argv.slice(3);
var subcmd = program.args[0];
if (aliases[subcmd]) {
    subcmd = aliases[subcmd];
}

if (!subcmd) {
    program.help();
} else {
    var bin = executable(subcmd);
    if (bin) {
        console.log('calling ' + bin);
        wrap(spawn(bin, args, {
            stdio: 'inherit',
            customFds: [0, 1, 2]
        }));
    } else {
        program.help();
    }
}

function executable(subcmd) {
    var file = join(__dirname, 'hendo-' + subcmd);
    if (exists(file)) {
        return file;
    }
}

function wrap(sp) {
    sp.on('close', function (code) {
        process.exit(code);
    });
}

function printHelp() {
    console.log('  Commands:');
    console.log();
    console.log('    init           Inits a new application in the current folder');
    console.log('    new            Creates a new application');
    console.log('    generate       Generates new code files or folders (short-cut alias: "g")');
    console.log();
    console.log('  All commands can be run with -h (or --help) for more information.')
}